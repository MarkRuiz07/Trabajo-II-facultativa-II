<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:id="@+id/dialog_add_layout"
    android:scrollbars="vertical"
    >

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="300dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/dialog_imageview"
                android:layout_gravity="center_horizontal"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="60dp"
                android:src="@drawable/files"
                tools:ignore="MissingConstraints"
                />

            <EditText
                android:id="@+id/editText_Asig"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:height="54dp"
                android:hint="Asignatura"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_marginTop="30dp" />

            <EditText
                android:id="@+id/editText_Desc"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:height="54dp"
                android:hint="Descripción"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:id="@+id/editText_prof"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:height="54dp"
                android:hint="Profesor"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:id="@+id/editText_dia"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:height="54dp"
                android:hint="Día"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:id="@+id/editText_hora"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:height="54dp"
                android:hint="Hora"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:id="@+id/editText_ProxTrab"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:height="54dp"
                android:hint="Fecha entrega próxima tarea"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnRegistrar"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="25dp"
                    android:text="Agregar"/>

                <Button
                    android:id="@+id/btncancelar"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="25dp"
                    android:text="Cancelar" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>